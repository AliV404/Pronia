@model List<Category>
@{
    int count = 0;
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Categories Table</h4>
                <p class="card-description">
                    <a class="btn btn-success">Create</a>
                </p>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    No
                                </th>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Products Count
                                </th>
                                <th>
                                    Date
                                </th>
                                <th>
                                    Settings
                                </th>                     
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(Category category in Model)
                            {
                                count++;
                                <tr>
                                    <td class="py-1">
                                        @count
                                    </td>
                                    <td>
                                        @category.Name
                                    </td>
                                    <td>
                                        @category.Products.Count
                                    </td>
                                    <td>
                                        @category.CreatedAt.ToString("d MMMM yyyy")
                                    </td>
                                    <td>
                                        <a class="btn btn-warning"><i class="mdi mdi-table-edit"></i></a>
                                        <a class="btn btn-danger"><i class="mdi mdi-delete-sweep"></i></a>
                                        <a class="btn btn-primary"><i class="mdi mdi-open-in-new"></i></a>
                                    </td>
                                </tr>
                            }
                            
                        
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
