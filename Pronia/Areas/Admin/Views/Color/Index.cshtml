@model List<Color>
@{
    int count = 0;
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Colors Table</h4>
                <div class="table-responsive">
                    <a asp-action="create" class="btn btn-success">Create</a>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    No
                                </th>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Products Count
                                </th>
                                <th>
                                    Date
                                </th>
                                <th>
                                    Settings
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(Color color in Model){
                                count++;
                                <tr>
                            
                                <td class="py-1">
                                    @count
                                </td>
                                <td>
                                    @color.Name
                                </td>
                                <td>
                                    None
                                </td>
                                <td>
                                    @color.CreatedAt.ToString("d MMMM yyyy")
                                </td>
                                <td>
                                    <a class="btn btn-warning" asp-action="update" asp-route-id="@color.Id"><i class="mdi mdi-table-edit"></i></a>
                                    <a class="btn btn-danger"><i class="mdi mdi-delete-sweep"></i></a>
                                    <a class="btn btn-primary"><i class="mdi mdi-open-in-new"></i></a>
                                </td>
                        </tr>
                       }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
</div>
